<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="300dp"
    android:padding="20dp">

    <TextView
        android:id="@+id/shake_number_label"
        android:text="@string/shake_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/shake_number"
        android:layout_alignParentRight="true"

        android:layout_alignParentEnd="true"
        />

    <SeekBar
        android:id="@+id/shake_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="10"
        android:layout_margin="10dp"
        android:progress="3"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="69dp" />

    <TextView
        android:id="@+id/sensibility_label"
        android:text="@string/sensibility"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_alignBaseline="@+id/shake_number_label"
        android:layout_alignBottom="@+id/shake_number_label"
        android:layout_centerHorizontal="true" />

    <SeekBar
        android:id="@+id/sensibility"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="60"
        android:progress="20"
        android:layout_margin="10dp"
        android:layout_below="@+id/shake_number"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <Button
        android:id="@+id/set"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set values"

        />



</LinearLayout>